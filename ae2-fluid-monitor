-- ME Bridge finden
local meBridge = peripheral.find("me_bridge")
if not meBridge then
  print("Kein ME Bridge gefunden!")
  return
end

-- Alle Fl端ssigkeiten im ME-System auflisten
local fluids = meBridge.listFluids()
if not fluids or #fluids == 0 then
  print("Keine Fl端ssigkeiten im ME-System gefunden.")
  return
end

-- Fl端ssigkeiten anzeigen
for _, fluid in ipairs(fluids) do
  print(string.format("Fl端ssigkeit: %s | Menge: %.2f mB", fluid.displayName, fluid.amount))
end
